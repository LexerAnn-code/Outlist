<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ankit.mvvmtodo">

    <application
        android:name=".KoinInjection.AppKoin"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppThemes">
        <activity android:name=".FolderOptionMenu"></activity>
        <activity
            android:name=".Util.PasswordVerify"
            android:windowSoftInputMode="adjustResize"
            android:noHistory="true" />
        <activity
            android:name=".UI.AddActivity"
            android:theme="@style/NoActionBar"
            android:windowSoftInputMode="adjustNothing" />
        <activity
            android:name=".UI.HomeActivity"
            android:theme="@style/NoActionBar"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".UI.MainActivity" />
        <activity android:name=".UI.EditTodoActivity" />
        <activity
            android:name=".FolderTodoActivity"
            android:windowSoftInputMode="adjustNothing">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>